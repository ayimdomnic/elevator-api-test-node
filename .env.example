# Application
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=elevator_db
DB_USER=elevator_user
DB_PASSWORD=elevator_pass
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Test Database
TEST_DB_HOST=postgres
TEST_DB_PORT=5432
TEST_DB_NAME=elevator_test_db
TEST_DB_USER=elevator_user
TEST_DB_PASSWORD=elevator_pass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000

# Logging
LOG_LEVEL=info
LOG_DIRECTORY=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10
LOG_CONSOLE=true
LOG_FILE=true